<div class="col-md-offset-1 col-md-10">
    <div class="input input--juro">
        @Html.TextBoxFor(m => m.Name, new { @class = "input__field input__field--juro" })
        <div class="input__label input__label--juro ">
            <label class="input__label-content input__label-content--juro">@I18n.ReceptionNameYL</label>
        </div>
    </div>
</div>

